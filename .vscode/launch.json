{
    "version": "0.2.0",
    "configurations": [
        {
            "name": "Launch local agent",
            "type": "go",
            "request": "launch",
            "mode": "auto",
            "program": "${workspaceFolder}/cmd/agent_local/",
            "buildFlags": ["-tags=debug"]
        },
        {
            "name": "Attach to agent (local)",
            "type": "go",
            "request": "attach",
            "mode": "local",
            "substitutePath": [
                {
                    "from": "${workspaceFolder}",
                    "to": "/Users/runner/work/platform/platform/"
                },
            ]
        },
        {
            "name": "Attach to agent (network)",
            "type": "go",
            "request": "attach",
            "debugAdapter": "dlv-dap",
            "mode": "remote",
            "port": 8011,
            // Replace with IP of machine gravity is running on
            "host": "127.0.0.1",
            "substitutePath": [
                {
                    "from": "${workspaceFolder}",
                    "to": "/workspace"
                },
            ]
        }
    ]
}
