{
  "protoc": {
    "options": ["-I=protos/"]
  },
  "files.associations": {
    "zshrc": "shellscript",
    "*.hcl": "terraform",
    "xstring": "cpp"
  },
  "gopls": {
    "build.buildFlags": [
        "-tags=integration,e2e",
    ]
  },
  "go.testFlags": ["-count=1", "-failfast", "-shuffle=on", "-v", "-covermode=atomic"],
  "go.testTags": "integration,e2e",
  "go.testTimeout": "300s",
  "go.coverOnSingleTest": true,
  "go.coverOnSingleTestFile": true,
  "go.coverOnTestPackage": true,
  "gitlens.autolinks": [
      {
          "alphanumeric": true,
          "prefix": "#<num>",
          "url": "https://github.com/goauthentik/platform/issues/<num>",
          "ignoreCase": false
      }
  ],
  "cmake.sourceDirectory": "${workspaceFolder}/ee/wcp",
  "cmake.buildDirectory": "${workspaceFolder}/cache/wcp",
  "cmake.automaticReconfigure": false
}
